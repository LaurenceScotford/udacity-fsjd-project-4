{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "npm-run-all tsc copy-files",
    "production-build": "npm-run-all clean prod-tsc copy-files copy-procfile copy-package-json copy-ebextensions",
    "seed": "node -r dotenv/config ./dist/seed_example_db.js",
    "watch": "npm-run-all -s set-dev-env migrate-up dev",
    "test": "npm-run-all -s set-test-env migrate-up jasmine-tests migrate-down --continue-on-error",
    "tsc": "tsc",
    "prod-tsc": "tsc -p tsconfig.prod.json",
    "dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/server.js\"",
    "jasmine-tests": "jasmine-ts",
    "migrate-up": "db-migrate up",
    "migrate-down": "db-migrate reset",
    "set-test-env": "cp .env.test .env",
    "set-dev-env": "cp .env.development .env",
    "clean": "rm -rf dist",
    "copy-files": "copyfiles -u 1 \"src/public/**/*\" dist",
    "copy-procfile": "cp Procfile dist/Procfile",
    "copy-package-json": "cp package.deploy.json dist/package.json",
    "copy-ebextensions": "copyfiles \".ebextensions/**/*\" dist",
    "prepare-deploy": "chmod +x ./bin/prepare-deploy.sh && ./bin/prepare-deploy.sh" 
  },
  "author": "Laurence Scotford / Udacity",
  "repository": {
    "type": "git",
    "url": "https://github.com/LaurenceScotford/udacity-fsjd-project-2.git"
  },
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^7.14.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/jasmine": "^3.6.3",
    "copyfiles": "^2.4.1",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
